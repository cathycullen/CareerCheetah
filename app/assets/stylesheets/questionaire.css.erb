.header {
  margin-bottom: 2em;
  text-align: center;
}

.current-step-wrapper {
  width: 100%;
  height: auto;
}

.current-step {
  width: 694px;
  height: auto;
  margin: 0 50px;
  float: left;
}

.current-step-wrapper .nav-left {
  width: 27px;
  height: auto;
  background-image: url("<%= asset_path('left-nav-btn.png')%>");
  background-repeat: no-repeat;
  float: left;
  margin: 100px 0 0 0;
}

.current-step-wrapper .nav-left-active {
  width: 27px;
  height: auto;
  opacity: 0;
    -moz-opacity: 0;
    filter:alpha(opacity=0);
}

.current-step-wrapper .nav-left-active:hover {
  opacity:1;
}

.current-step-wrapper .nav-right {
  width: 27px;
  height: auto;
  background-image: url("<%= asset_path('right-nav-btn.png')%>");
  background-repeat: no-repeat;
  float: left;
  clear: right;
  margin: 100px 0 0 0;
}

.current-step-wrapper .nav-right-active:hover {
  opacity:1;
}

.current-step-wrapper .nav-right-active {
  width: 27px;
  height: auto;
  opacity: 0;
    -moz-opacity: 0;
    filter:alpha(opacity=0);
}

.progress {
  width: 692px;
  height: 40px;
  float: left;
  clear: right;
  margin: 30px 0 0 78px;
  border: 1px solid #60605b;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
}

.progress .bar {
  height: 34px;
  background-color: #ff8a00;
  border: 1px solid #60605b;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  margin: 3px;
  border: none;
}

.current-step h1 {
  color: rgb(238, 129, 62);
}

/* Section Styling */
.current-step.phase {
  text-align: center;
}

/* Section Styling */
.current-step.section {
  text-align: center;
}

.current-step.section .intro {
  margin-bottom: 2em;
}

/* Question Styling */
.question .prompt {
  font-style: normal;
  font-size: 140%;
  line-height: 1.25;
}

.question ul {
  list-style: none;
}

.question li {
  padding: .5em;
}

.question .radio-options {
  margin-left: 250px;
}

.radio-options li {
  display: inline-block;
  font-size: 20px;
  margin: 0 10px;
  text-align: center;
  padding: 0;
}

.full-textarea {
  width: 100%;
  height: 10em;
  font-size: 18px;
}

.question .options {
  padding: 0;
}

.question .column {
  float: left;
}

.question .column.c-4 {
  width: 25%;
}

.question .column.c-3 {
  width: 33%;
}

.question .column.c-2 {
  width: 50%;
}

.question .group {
  width: 50%;
  float: left;
}
.question .group li input {
  width: 80%;
  font-size: 1.2em;
}

.rating-options {
  margin-top: 3em;
}

.rating-options li {
  display: inline-block;
  text-align: center;
  vertical-align: top;
}

.rating-option {
  width: 14%;
  font-size: 12px;
}

.rating-option .value-description {
  color: #ff8a00;
}

.borderWrap {
  width: 672px;
  height: 250px;
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #60605b;
  border-radius: 10px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
}


