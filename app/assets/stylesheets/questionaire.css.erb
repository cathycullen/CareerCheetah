.header {
  margin-bottom: 2em;
  text-align: center;
}

.current-step-wrapper {
  width: 100%;
  height: auto;
}

.current-step {
  width: 694px;
  height: auto;
  margin: 0 50px;
  float: left;
}

.current-step-wrapper .nav-left {
  width: 27px;
  height: auto;
  background-image: url("<%= asset_path('left-nav-btn.png')%>");
  background-repeat: no-repeat;
  float: left;
  margin: 100px 0 0 0;
}

.current-step-wrapper .nav-left-active {
  width: 27px;
  height: auto;
  opacity: 0;
    -moz-opacity: 0;
    filter:alpha(opacity=0);
}

.current-step-wrapper .nav-left-active:hover {
  opacity:1;
}

.current-step-wrapper .nav-right {
  width: 27px;
  height: auto;
  background-image: url("<%= asset_path('right-nav-btn.png')%>");
  background-repeat: no-repeat;
  float: left;
  clear: right;
  margin: 100px 0 0 0;
}

.current-step-wrapper .nav-right-active:hover {
  opacity:1;
}

.current-step-wrapper .nav-right-active {
  width: 27px;
  height: auto;
  opacity: 0;
    -moz-opacity: 0;
    filter:alpha(opacity=0);
}

.progress {
  width: 692px;
  height: 40px;
  float: left;
  clear: right;
  margin: 30px 0 0 78px;
  border: 1px solid #60605b;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
}

.progress .bar {
  width: 200px;
  height: 34px;
  background-color: #ff8a00;
  border: 1px solid #60605b;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  margin: 3px;
  border: none;
}

.current-step h1 {
  color: rgb(238, 129, 62);
}

/* Section Styling */
.current-step.phase {
  text-align: center;
}

/* Section Styling */
.current-step.section {
  text-align: center;
}

.current-step.section .intro {
  margin-bottom: 2em;
}

/* Question Styling */
.question .prompt {
  font-style: normal;
  font-size: 140%;
  line-height: 1.25;
}

.question ul {
  list-style: none;
}

.question li {
  padding: .5em;
}

.question .radio-options {
  margin-left: 250px;
}

.radio-options li {
  display: inline-block;
  font-size: 20px;
  margin: 0 10px;
  text-align: center;
  padding: 0;
}

.question .options {
  padding: 0;
}
