<h1><%= link_to "All Programs", admin_programs_path %> / <%= @program.name %></h1>

<% @program.phases.rank(:row_order).each do |phase| %>
  <h3><%= phase.name %></h3>
  <% phase.sections.rank(:row_order).each do |section| %>
    <h4><%= section.name %></h4>
    <% section.questions.rank(:row_order).each do |question| %>
      <p><%= question.prompt %> <%= link_to "view", program_phase_section_question_path(@program, phase, section, question) %></p>
      <ul>
        <% question.response_options.rank(:row_order).each do |option| %>
          <li><%= option.description %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
<% end %>
