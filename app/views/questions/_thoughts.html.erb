<% question.response_options.rank(:row_order).each do |option| %>
  <% response_data = response_selection_data(question, option) %>
  <div class="mood-thought" data-response-option-id="<%=option.id%>">
    <p><%= option.description %></p>

    <%= option_text_area(option) %><br />
    <ul class="thought-type-options">
      <li>
        <%= label_tag do %>
          <%= radio_button_tag option.id, "supportive", response_data['supportive'] == 'true' %>
          This is a supportive belief or thought.
        <% end %>
      </li>

      <li>
        <%= label_tag do %>
          <%= radio_button_tag option.id, "negative", response_data['negative'] == 'true' %>
          This is a belief or thought that may negatively impact my performance, process or results.
        <% end %>
      </li>
    </ul>
  </div>

<% end %>
